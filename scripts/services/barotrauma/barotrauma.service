Environment=DISPLAY=:0
WorkingDirectory=/home/bwinter_sc81/baroboys/Barotrauma
User=bwinter_sc81
Group=bwinter_sc81

ExecStartPost=/usr/bin/bash -c 'echo "âœ… barotrauma.service launched at $(date)" >> /var/log/baroboys/barotrauma.log'
