[Unit]
Description=V Rising Shutdown
Requires=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=HOME=/home/bwinter_sc81
User=bwinter_sc81
Group=bwinter_sc81

ExecStart=/root/baroboys/scripts/services/vrising/shutdown.sh
ExecStopPost=/usr/bin/systemctl poweroff

SuccessExitStatus=0
KillMode=control-group
TimeoutStartSec=300

StandardOutput=append:/var/log/baroboys/vrising_shutdown.log
StandardError=append:/var/log/baroboys/vrising_shutdown.log
