[Service]
Type=simple
Restart=on-failure
WorkingDirectory=/home/bwinter_sc81/baroboys/VRising
User=bwinter_sc81
Group=bwinter_sc81

Environment=DISPLAY=:0
ExecStart=/home/bwinter_sc81/baroboys/scripts/services/vrising/startup.sh
ExecStartPost=/usr/bin/bash -c 'echo "âœ… vrising.service launched at $(date)" >> /var/log/baroboys/vrising_startup.log'
ExecStopPost=/usr/bin/bash -c 'echo "ðŸ›‘ vrising.service finished shutdown at $(date)" >> /var/log/baroboys/vrising_startup.log'

