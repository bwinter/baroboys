[Unit]
Description=V Rising Setup
Requires=network-online.target refresh-repo-startup.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/root
User=root

ExecStart=/root/baroboys/scripts/services/vrising/setup.sh

SuccessExitStatus=0
KillMode=control-group
TimeoutStartSec=300

StandardOutput=append:/var/log/baroboys/vrising_setup.log
StandardError=append:/var/log/baroboys/vrising_setup.log

[Install]
WantedBy=multi-user.target
