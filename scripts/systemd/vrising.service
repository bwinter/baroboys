[Service]
Type=simple
Environment=DISPLAY=:0
WorkingDirectory=/home/bwinter_sc81/baroboys/VRising
User=bwinter_sc81
Group=bwinter_sc81

ExecStartPost=/usr/bin/bash -c 'echo "âœ… vrising.service launched at $(date)" >> /home/bwinter_sc81/baroboys/VRising/logs/vrising.log'
