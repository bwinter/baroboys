[Unit]
Description=Save & Commit Before Shutdown
DefaultDependencies=no
Requires=network-online.target
After=network-online.target

# This runs before system shutdown or vrising stop
Before=shutdown.target halt.target reboot.target
Before=vrising.service

[Service]
Type=oneshot
Environment=HOME=/root
ExecStart=/root/baroboys/scripts/teardown/shutdown.sh
TimeoutStartSec=300
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
