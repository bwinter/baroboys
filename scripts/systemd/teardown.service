[Unit]
Description=Save & Commit Before Shutdown
DefaultDependencies=no
Requires=network-online.target
After=network-online.target

# Run before shutdown and before vrising fully stops
Before=shutdown.target halt.target reboot.target
Before=vrising.service
PartOf=vrising.service

[Service]
Type=oneshot
Environment=HOME=/root
ExecStart=/root/baroboys/scripts/teardown/shutdown.sh
TimeoutStartSec=180
RemainAfterExit=true

[Install]
WantedBy=shutdown.target
