<?xml version="1.0" encoding="utf-8"?>
<!-- Custom permission presets for this server -->
<PermissionPresets>

    <!-- Server owner / emergency admin -->
    <Preset
            name="OwnerAdmin"
            description="Server owner with full override and recovery powers."
            permissions="All">

        <!-- Minimal but sufficient god access -->
        <Command name="clientlist"/>
        <Command name="showperm"/>

        <Command name="startgame"/>
        <Command name="endgame"/>
        <Command name="restart"/>
        <Command name="exit"/>

        <Command name="spawn"/>
        <Command name="spawnitem"/>
        <Command name="give"/>
        <Command name="teleportcharacter"/>
        <Command name="teleportsub"/>
        <Command name="godmode"/>
        <Command name="godmode_mainsub"/>

        <Command name="fixitems"/>
        <Command name="fixhulls"/>
        <Command name="heal"/>
        <Command name="revive"/>

    </Preset>

    <!-- Friends: full campaign + round control, no god tools -->
    <Preset
            name="CampaignAdmin"
            description="Trusted friends with full campaign and round control."
            permissions="
      ManageRound,
      ManageCampaign">

        <!-- Round flow -->
        <Command name="readycheck"/>

        <!-- Campaign navigation -->
        <Command name="campaigninfo"/>
        <Command name="campaigndestination"/>

        <!-- Basic recovery -->
        <Command name="respawnnow"/>
        <Command name="heal"/>
        <Command name="revive"/>
        <Command name="fixitems"/>
        <Command name="fixhulls"/>

    </Preset>

</PermissionPresets>
