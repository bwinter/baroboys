[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = green
  changed   = yellow
  untracked = cyan

[alias]
  co = checkout
  ci = commit -v
  br = branch
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[push]
  default = simple

[credential]
  helper = cache --timeout 1200

[core]
  editor = vim

[url "git@github.com:"]
  insteadOf = https://github.com/

[user]
	name = Game Server
